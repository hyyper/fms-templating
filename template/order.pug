          include module/terms-conditions

          <!-- Money Back Guarantee -->
          include module/guarantee/2/skeleton

        .col-sm-7.col-sm-pull-5.col-md-7.col-md-pull-4

          <!-- What You Get -->
          include module/what-you-get
